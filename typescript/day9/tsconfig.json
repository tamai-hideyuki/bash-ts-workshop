{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "baseUrl": "./",
      "paths": {
        "@types/*": ["src/types/*"],
        "@utils/*": ["src/utils/*"],
        "@services/*": ["src/services/*"]
      },
      "strict": true,
      "verbatimModuleSyntax": true
    },
    "include": ["src"]
  }
  